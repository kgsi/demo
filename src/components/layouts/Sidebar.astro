---
export interface Props {
  gap?: string
  contentMin?: string
  isReverse?: boolean
}

const { gap = '48px', contentMin = '50%', isReverse = false } = Astro.props
---

<div class={`with-sidebar ${isReverse && '-direction-reverse'}`}>
  <slot />
</div>

<style define:vars={{ gap, contentMin }}>
  .with-sidebar {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap);
  }

  .with-sidebar.-direction-reverse {
    flex-direction: row-reverse;
  }

  .with-sidebar > :global(.side) {
    flex-grow: 1;
  }

  .with-sidebar > :global(.main) {
    flex-basis: 0;
    flex-grow: 999;
    min-inline-size: var(--contentMin);
  }
</style>
