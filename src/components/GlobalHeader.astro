  <nav aria-label="メイン">
    <ul>
      <li {...current === 'company' ? { ...activeClass } : {}}>
        <a {...current === 'index' ? { 'aria-current': 'page' } : {}} href="/company/">COMPANY</a>
      </li>
      <li {...current === 'services' ? { ...activeClass } : {}}>
        <a {...current === 'index' ? { 'aria-current': 'page' } : {}} href="#">SERVICES</a>
      </li>
      <li {...current === 'recruit' ? { ...activeClass } : {}}>
        <a {...current === 'index' ? { 'aria-current': 'page' } : {}} href="#">RECRUIT</a>
      </li>
      <li>
        <AnchorButton type="ghost" size="m" href="/contact/" {...current === 'contact' ? { 'aria-current': 'page' } : {}}>
          CONTACT
        </AnchorButton>
      </li>
    </ul>
  </nav>
