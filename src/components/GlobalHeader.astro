<style>
  .globalHeader {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    background-color: var(--color-black);
    padding: 28px 24px;
    container-type: inline-size;
  }

  .globalHeader__siteid {
    display: inline-flex;
    align-items: center;
    color: var(--color-white);
  }

  .globalHeader__siteid a {
    text-decoration: none;
    font-weight: bold;
    color: var(--color-white);
  }

  nav {
    display: inline-flex;
    align-items: center;
    margin-inline-start: auto;
  }

  ul {
    display: inline-flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
  }

  li > a {
    color: var(--color-white);
    text-decoration: none;
    display: inline-block;
    font-family: var(--font-family-emphasis);
    font-weight: 700;
    padding: 16px 0;
    position: relative;
  }

  li.active > a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 4px;
    background-color: var(--color-white);
    left: 0;
    bottom: 0;
  }

  li > a:hover {
    filter: brightness(0.5);
  }

  @container (max-width: 20rem) {
    nav {
      margin-block-start: 8px;
      margin-inline-start: unset;
    }
    ul {
      display: inline-flex;
      align-items: flex-start;
      flex-direction: column;
      gap: 8px;
    }
  }
</style>
